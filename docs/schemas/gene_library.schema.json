{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Gene Library Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "name",
    "slots",
    "genes"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "slots": {
      "type": "array",
      "items": {
        "enum": [
          "head_gene",
          "torso_gene",
          "leg_gene"
        ]
      },
      "uniqueItems": true
    },
    "genes": {
      "type": "object",
      "additionalProperties": false
    }
  }
}